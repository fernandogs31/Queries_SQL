SELECT DISTINCT
COE.CODIGO "INV_ORG",
IM.INVOICE_NUM "INVOICE_NUM",
IM.PROFORMA_NUM "PROFORMA_NUM",
IEE.NOME "FORNECEDOR",
IESE.CODIGO "SITE",
to_date(IM.DT_EMISSAO, 'DD/MM/YYY') "DT_EMISSAO",
ITPE.CODIGO "TERMO_PGTO",
decode(IM.MOEDA_ID, 4681, 'USD', 4594, 'EUR') "MOEDA",
IM.VALOR_TOTAL "VALOR_TOTAL",
to_date(IM.DT_ENVIO_AP, 'DD/MM/YYYY') "DT_ENVIO_AP"

FROM IMP_INVOICES IM,
CMX_ORGANIZACOES COE,
IMP_VW_ENTIDADES IEE,
IMP_VW_ENTIDADES_SITES IESE,
IMP_TERMOS_PGTO ITPE

WHERE IM.ORGANIZACAO_ID = COE.ORGANIZACAO_ID
AND IM.EXPORT_ID = IEE.ENTIDADE_ID
AND IM.EXPORT_SITE_ID = IESE.ENTIDADE_SITE_ID
AND IM.TERMO_ID = ITPE.TERMO_ID
AND IM.DT_EMISSAO BETWEEN '01/01/2021' AND '01/03/2021';
